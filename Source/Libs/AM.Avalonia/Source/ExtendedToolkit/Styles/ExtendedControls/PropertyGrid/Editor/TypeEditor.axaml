<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Avalonia.ExtendedToolkit.Controls.PropertyGrid.Controls;assembly=AM.Avalonia"
    xmlns:editors="clr-namespace:Avalonia.ExtendedToolkit.Controls.PropertyGrid.Editors;assembly=AM.Avalonia"
    xmlns:design="clr-namespace:Avalonia.ExtendedToolkit.Controls.PropertyGrid.Design;assembly=AM.Avalonia"
    >
  <Style Selector="editors|TypeEditor">
    <Setter Property="Template">
      <ControlTemplate>
        <StackPanel>
          <StackPanel Grid.Row="0" Orientation="Horizontal">
            <TextBlock Text="EditedType"/>
            <TextBlock Margin="5" Text="{TemplateBinding EditedType}"/>
          </StackPanel>

          <design:PropertyContainer Entry="{Binding}"
            Content="{TemplateBinding InlineTemplate}"
          />
          <!--<design:PropertyContainer Entry="{Binding}"
            Content="{TemplateBinding ExtendedTemplate}"
          />-->



        </StackPanel>
      </ControlTemplate>
    </Setter>


  </Style>



</Styles>
