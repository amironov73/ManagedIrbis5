<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net5.0</TargetFramework>
        <RepositoryUrl>https://github.com/amironov73/ManagedIrbis5</RepositoryUrl>
        <PackageVersion>5.0.0</PackageVersion>
        <Title>GTK-based controls and dialogs for Ars Magna project</Title>
        <Authors>Alexey Mironov</Authors>
        <Description>GTK-based controls and dialogs for Ars Magna project.</Description>
        <Copyright>Copyright Alexey Mironov 2019-2021</Copyright>
        <PackageProjectUrl>https://arsmagna.ru</PackageProjectUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageIcon>arsmagna-icon.png</PackageIcon>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
        <DocumentationFile>bin\Debug\AM.Gtk.xml</DocumentationFile>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <DefineConstants>TRACECOREAPP;CONTRACTS_FULL;COREAPP;TRACE</DefineConstants>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
        <DocumentationFile>bin\Release\AM.Gtk.xml</DocumentationFile>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <DefineConstants>TRACECOREAPP;CONTRACTS_FULL</DefineConstants>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\AM.Core5\AM.Core5.csproj" />
      <ProjectReference Include="..\AM.Skia\AM.Skia.csproj" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="GtkSharp" Version="3.24.24.34" />
    </ItemGroup>

    <ItemGroup>
        <None Include="arsmagna-icon.png" Pack="true" PackagePath="\"/>
    </ItemGroup>

</Project>
