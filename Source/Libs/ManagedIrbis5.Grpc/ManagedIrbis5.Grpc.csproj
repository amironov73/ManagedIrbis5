<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net5.0</TargetFramework>
        <ApplicationIcon>BlueBook.ico</ApplicationIcon>
        <SignAssembly>true</SignAssembly>
        <AssemblyOriginatorKeyFile>ArsMagna.private.snk</AssemblyOriginatorKeyFile>
        <DelaySign>false</DelaySign>
        <Version>5.0.0</Version>
        <Authors>Alexey Mironov</Authors>
        <Company>Ars Magna Project</Company>
        <Product>Ars Magna</Product>
        <Description>GRPC services for ArsMagna project.</Description>
        <PackageProjectUrl>https://arsmagna.ru</PackageProjectUrl>
        <RootNamespace>ManagedIrbis.Grpc</RootNamespace>
        <Title>GRPC services for ArsMagna project</Title>
        <Copyright>Copyright Alexey Mironov 2021</Copyright>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageIcon>arsmagna-icon.png</PackageIcon>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
      <DocumentationFile>bin\Debug\ManagedIrbis.Grpc.xml</DocumentationFile>
      <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
      <CheckForOverflowUnderflow>true</CheckForOverflowUnderflow>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
      <DocumentationFile>bin\Release\ManagedIrbis.Grpc.xml</DocumentationFile>
      <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
      <CheckForOverflowUnderflow>true</CheckForOverflowUnderflow>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Google.Protobuf" Version="3.17.3" />
      <PackageReference Include="Grpc.Tools" Version="2.38.1">
        <PrivateAssets>all</PrivateAssets>
        <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      </PackageReference>
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\AM.Core5\AM.Core5.csproj" />
      <ProjectReference Include="..\ManagedIrbis5\ManagedIrbis5.csproj" />
    </ItemGroup>

    <ItemGroup>
        <Protobuf Include="Protos\Record.proto" />
    </ItemGroup>

    <ItemGroup>
        <None Include="arsmagna-icon.png" Pack="true" PackagePath="\" />
    </ItemGroup>
    
</Project>
