<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <IsPackable>true</IsPackable>
        <ApplicationIcon>diffusion.ico</ApplicationIcon>
    </PropertyGroup>

    <PropertyGroup>
        <RootNamespace>AM.StableDiffusion</RootNamespace>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    </PropertyGroup>

    <PropertyGroup>
        <Description>Ars Magna Stable Diffusion services</Description>
        <Title>ArsMagna Stable Diffusion services</Title>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)'=='Debug'">
        <DocumentationFile>bin\Debug\AM.StableDiffusion.xml</DocumentationFile>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)'=='Release'">
        <DocumentationFile>bin\Release\AM.StableDiffusion.xml</DocumentationFile>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\AM.Core5\AM.Core5.csproj" />
      <ProjectReference Include="..\AM.Scripting\AM.Scripting.csproj" />
      <ProjectReference Include="..\AM.Web\AM.Web.csproj" />
    </ItemGroup>

    <!-- Централизованное управление пакетами -->
    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Http" />
        <PackageReference Include="RestSharp" />
        <PackageReference Include="RestSharp.Serializers.NewtonsoftJson" />
        <PackageReference Include="SkiaSharp" />
        <PackageReference Include="SixLabors.ImageSharp" />
    </ItemGroup>

</Project>
