<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <IsPackable>true</IsPackable>
    </PropertyGroup>

    <PropertyGroup>
        <RootNamespace>AM.Linguistics</RootNamespace>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    </PropertyGroup>

    <PropertyGroup>
        <Description>Ars Magna linguistics services</Description>
        <Title>ArsMagna linguistics services</Title>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)'=='Debug'">
        <DocumentationFile>bin\Debug\AM.Linguistics.xml</DocumentationFile>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)'=='Release'">
        <DocumentationFile>bin\Release\AM.Linguistics.xml</DocumentationFile>
    </PropertyGroup>

    <ItemGroup>
        <None Remove="Dict\adjective.bin"/>
        <EmbeddedResource Include="Dict\adjective.bin"/>
        <None Remove="Dict\imperfect.bin"/>
        <EmbeddedResource Include="Dict\imperfect.bin"/>
        <None Remove="Dict\noun.bin"/>
        <EmbeddedResource Include="Dict\noun.bin"/>
        <None Remove="Dict\pronoun.bin"/>
        <EmbeddedResource Include="Dict\pronoun.bin"/>
        <None Remove="Dict\verb.bin"/>
        <EmbeddedResource Include="Dict\verb.bin"/>
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\AM.Core5\AM.Core5.csproj"/>
    </ItemGroup>

</Project>
