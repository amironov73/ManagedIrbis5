    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
        <DocumentationFile>bin\Release\RestfulIrbis5.xml</DocumentationFile>
    </PropertyGroup>

    <!-- Централизованное управление пакетами -->
