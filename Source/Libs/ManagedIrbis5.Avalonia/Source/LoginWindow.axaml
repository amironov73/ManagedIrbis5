<!-- ReSharper disable MarkupAttributeTypo -->

<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ManagedIrbis.Avalonia"
        Width="400" Height="220"
        MinWidth="400" MinHeight="220"
        CanResize="False"
        ShowInTaskbar="False"
        x:Class="ManagedIrbis.Avalonia.LoginWindow"
        Title="Вход в систему">

    <Design.DataContext>
        <vm:LoginWindow />
    </Design.DataContext>

    <StackPanel
       Orientation="Vertical"
       Margin="20"
       Spacing="10"
       HorizontalAlignment="Stretch"
       VerticalAlignment="Center">

       <Label>Логин</Label>
       <TextBox
           Name="LoginBox"
           Focusable="True"
           Text="{Binding Login}"/>

       <Label>Пароль</Label>
       <TextBox
           Name="PasswordBox"
           Focusable="True"
           Text="{Binding Password}"
           PasswordChar="*" />

       <StackPanel
           Orientation="Horizontal"
           Spacing="10"
           HorizontalAlignment="Right">

           <Button
               Name="LoginButton"
               Focusable="True"
               Command="{Binding LoginButtonClicked}">
               Вход
           </Button>
           <Button
               Name="CancelButton"
               Command="{Binding CancelButtonClicked}">
               Отмена
           </Button>

       </StackPanel>

   </StackPanel>

</Window>
