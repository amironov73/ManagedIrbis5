<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="500"
        Height="300"
        x:Class="AvaloniaTests.MainWindow"
        Title="Avalonia Tests">

    <WrapPanel
