        <Button
            Name="FieldEditorButton"
            Click="FieldEditorButton_OnClick">
            Field Editor
        </Button>

        <Button
            Name="LoginWindowButton"
            Click="LoginWindowButton_OnClick">
            Login Window
        </Button>

        <Button
            Name="AboutWindowButton"
            Click="AboutWindowButton_OnClick">
            About Window
        </Button>

        <Button
            Name="LabeledTextBoxButton"
            Click="LabeledTextBoxButton_OnClick">
