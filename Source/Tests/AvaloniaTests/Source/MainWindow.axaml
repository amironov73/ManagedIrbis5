        </Button>

        <Button
            Name="ProgressRingButton"
            Click="ProgressRingButton_OnClick">
            ProgressRing
        </Button>

        <Button
            Name="CompactNumericUpDownButton"
            Click="CompactNumericUpDownButton_OnClick">
            CompactNumericUpDown
        </Button>

        <Button
            Name="ProgressStripeButton"
            Click="ProgressStripeButton_OnClick">
            ProgressStripe
        </Button>

    </WrapPanel>

</Window>
