        </Button>

        <Button
            Name="ExceptionDialogButton"
            Click="ExceptionDialogButton_OnClick">
            ExceptionDialog
        </Button>

        <Button
            Name="ButtonedTextBoxButton"
            Click="ButtonedTextBoxButton_OnClick">
            ButtonedTextBox
        </Button>

        <Button
            Name="AnalogClockButton"
            Click="AnalogClockButton_OnClick">
            AnalogClock
        </Button>

        <Button
            Name="BusyWindowButton"
            Click="BusyWindowButton_OnClick">
            BusyWindow
        </Button>

        <Button
            Name="PlainTextEditorDialogButton"
            Click="PlainTextEditorDialogButton_OnClick">
            PlainTextEditorDialog
        </Button>

        <Button
            Name="PlainTextViewerDialogButton"
            Click="PlainTextViewerDialogButton_OnClick">
            PlainTextViewerDialog
        </Button>

        <Button
            Name="FieldPainterButton"
            Click="FieldPainterButton_OnClick">
            FieldPainter
        </Button>

        <Button
            Name="DataGridButton"
            Click="DataGridButton_OnClick">
            DataGrid
        </Button>

        <Button
            Name="PropertyGridButton"
            Click="PropertyGridButton_OnClick">
