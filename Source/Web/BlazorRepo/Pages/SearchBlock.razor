@using System.Text
@using AM

<SearchLine @ref="_firstLine" Prefix="A="/>
<SearchLine @ref="_secondLine" Prefix="T="/>
<SearchLine @ref="_thirdLine" Prefix="K="/>

@code {

    SearchLine _firstLine = new();
    SearchLine _secondLine = new();
    SearchLine _thirdLine = new();
    public string Expression()
    {
        var result = Utility.JoinNonEmpty
            (
                " * ",
                _firstLine.Expression(),
                _secondLine.Expression(),
                _thirdLine.Expression()
            );

        return result;
    }

}
