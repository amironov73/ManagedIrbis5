@if (!Hidden)
{
    <div class="text-center text-info my-3">
        @ChildContent
    </div>
}

@code {

    [Parameter]
    public bool Hidden { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    public void Hide()
    {
        Hidden = true;
        StateHasChanged();
    }
}
