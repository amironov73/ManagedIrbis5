<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <ApplicationIcon>airplane.ico</ApplicationIcon>
        <SignAssembly>false</SignAssembly>
    </PropertyGroup>

    <ItemGroup>
        <None Remove="NLog.config"/>
    </ItemGroup>

    <PropertyGroup>
        <ErrorOnDuplicatePublishOutputFiles>false</ErrorOnDuplicatePublishOutputFiles>
    </PropertyGroup>

    <ItemGroup>
        <Content Include="NLog.config">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </Content>
    </ItemGroup>

    <!-- Централизованное управление пакетами -->
    <!-- К сожалению, Telegram.Bot не имеет сильного имени -->
    <ItemGroup>
        <PackageReference Include="Telegram.Bot"/>
        <PackageReference Include="Telegram.Bot.Extensions.Polling"/>
        <PackageReference Include="Topshelf"/>
        <PackageReference Include="Topshelf.NLog"/>
    </ItemGroup>

</Project>
